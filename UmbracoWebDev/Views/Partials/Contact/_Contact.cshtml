@inherits UmbracoViewPage<UmbracoWebDev.Models.ContactModel>
@using Umbraco.Core;
@using Umbraco.Web.Mvc;

@using (Html.BeginUmbracoForm("SubmitForm", "ContactSurface", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.ValidationSummary()
    </div>

    <div class="form-group">
        <div class="col-xs-3">
            @Umbraco.Field("formFirstNameInput")
        </div>
        <div class="col-xs-9">
            @Html.TextBoxFor(m => m.FirstName)
        </div>
    </div>

    <div class="form-group">
        <div class="col-xs-3">
            @Umbraco.Field("formLastNameInput")
        </div>
        <div class="col-xs-9">
            @Html.TextBoxFor(m => m.LastName)
        </div>
    </div>


    <div class="form-group">
        <div class="col-xs-3">
            @Umbraco.Field("formEmailnput")
        </div>
        <div class="col-xs-9">
            @Html.TextBoxFor(m => m.EmailAddress)
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-xs-3">
            @Umbraco.Field("formSubjectInput")
        </div>
        <div class="col-xs-9">
            @Html.TextBoxFor(m => m.Subject)
        </div>
    </div>

    <div class="form-group">
        <div class="col-xs-3">
            @Umbraco.Field("formMessageInput")
        </div>
        <div class="col-xs-9">
            @Html.TextAreaFor(m => m.Message)
        </div>
    </div>
    <button>@Umbraco.Field("formSubBtnText")</button>
}